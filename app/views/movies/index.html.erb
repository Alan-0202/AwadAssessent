


<!-- Service Area -->
<section class="service-area pt-100 pb-70">
  <div class="container">
    <div class="section-title text-center">
      <h2>Movies</h2>
      <p class="margin-auto">There are 4,802 pieces of data</p>
    </div>
    <div class="row pt-45">
      <div class="col-lg-12 col-md-12">
        <div class="services-card">

          <h1>DataSets</h1>

          <div style="height: 500px; overflow: auto">
            <table class="table table-bordered table-hover" style="height: 500px">
              <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Title</th>
                <th scope="col">Homepage</th>
                <th scope="col">Revenue</th>
                <th scope="col">Release</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <% @movies.each do |movie| %>
                <tr>
                  <td><%= movie.id %></td>
                  <td><%= movie.title %></td>
                  <td><a href="<%= movie.homepage %>"><%= movie.homepage %></a></td>
                  <td><%= movie.revenue %></td>
                  <td><%= movie.release %></td>
                  <td><%= link_to 'Show', movie %></td>
                  <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
                  <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
          <br>





        </div>
      </div>


    </div>
  </div>
</section>
<!-- Service Area End -->

<!-- Service Area -->
<section class="service-area pt-100 pb-70" style="padding-bottom: 500px;">
  <div class="container">
    <div class="section-title text-center">
      <h2>Movies Revenue Charts</h2>
      <p class="margin-auto">There are 4,802 pieces of data</p>
    </div>
    <div class="row pt-45">
      <div class="col-lg-12 col-md-12">
        <div class="services-card">

          <h1>DataSets</h1>

          <div style="height: 500px; overflow: auto">
            <div id="main123456" style="width: 100%; height: 500px"></div>
          </div>
          <br>





        </div>
      </div>


    </div>
  </div>
</section>
<!-- Service Area End -->

<script>
    var myChart = echarts.init(document.getElementById('main123456'));
    var title = <%= raw @moviestitle %>;
    var revenue = <%= raw @moviesrevenue %>;
    option = {
        title: {
            text: 'Movies_Revenue',
            subtext: 'From kaggle'
        },
        tooltip: {
            trigger: 'axis',
            axisPointer: {
                type: 'shadow'
            }
        },
        legend: {
            data: ['total']
        },
        grid: {
            left: '3%',
            right: '4%',
            bottom: '3%',
            containLabel: true
        },
        xAxis: {
            type: 'value',
            boundaryGap: [0,0.01]
        },
        yAxis:{
            type: 'category',
            data: title,
        },
        series: [

            {
                name: 'total',
                type: 'bar',
                data: revenue,
            }
        ]
    };
    myChart.setOption(option);


</script>